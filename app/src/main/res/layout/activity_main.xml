<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="bottom">

            <TextView
                android:id="@+id/login_text"
                android:textSize="18dp"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="로그인" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/cell_number"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:hint="전화번호 입력"
                    android:textSize="10dp"></EditText>

                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="match_parent"></LinearLayout>

                <Button
                    android:id="@+id/cell_number_button"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="인증번호 요청"
                    android:textSize="10dp"></Button>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />


            <RadioGroup
                android:id="@+id/Radio"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/Barista"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="바리스타부"
                    android:textSize="10dp"></RadioButton>

                <RadioButton
                    android:id="@+id/teacher"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="선생님"
                    android:textSize="10dp"></RadioButton>
            </RadioGroup>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/Certification_Number"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"></EditText>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center">

                <Button
                    android:id="@+id/Certification_Number_button"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="인증 완료"
                    android:textSize="10dp"></Button>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="87dp" />


        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>